NAME		= libft.a

SRCS		=	ft_atoi.c					\
				ft_atoi_base.c				\
				ft_bzero.c					\
				ft_calloc.c					\
				ft_convert_base.c			\
				ft_exp.c					\
				ft_ftoa.c					\
				ft_isalnum.c				\
				ft_isalpha.c				\
				ft_isascii.c				\
				ft_isdigit.c				\
				ft_isprint.c				\
				ft_isspace.c				\
				ft_itoa.c					\
				ft_itoa_base.c				\
				ft_lstadd_back.c			\
				ft_lstadd_front.c			\
				ft_lstclear.c				\
				ft_lstdelone.c				\
				ft_lstiter.c				\
				ft_lstlast.c				\
				ft_lstmap.c					\
				ft_lstnew.c					\
				ft_lstsize.c				\
				ft_memccpy.c				\
				ft_memchr.c					\
				ft_memcmp.c					\
				ft_memcpy.c					\
				ft_memmove.c				\
				ft_memset.c					\
				ft_memswap.c				\
				ft_nbrlen.c					\
				ft_putchar_fd.c				\
				ft_putendl_fd.c				\
				ft_putnbr_fd.c				\
				ft_putstr_fd.c				\
				ft_realloc.c				\
				ft_reverse_str.c			\
				ft_split.c					\
				ft_strchr.c					\
				ft_strdup.c					\
				ft_strjoin.c				\
				ft_strlcat.c				\
				ft_strlcpy.c				\
				ft_strlen.c					\
				ft_strmapi.c				\
				ft_strncmp.c				\
				ft_strnstr.c				\
				ft_strrchr.c				\
				ft_strtrim.c				\
				ft_substr.c					\
				ft_tolower.c				\
				ft_toupper.c				\
				ft_utoa.c					\
				ft_utoa_base.c				\
				malloc_list.c

OBJS		= ${SRCS:.c=.o}

INCDIR		= .

CC			= gcc

RM			= rm -f

CFLAGS		= -Wall -Wextra -Werror

.c.o:
			${CC} ${CFLAGS} -I${INCDIR} -c $^ -o $@

all:		${NAME}

${NAME}:	${OBJS}
			ar rc ${NAME} ${OBJS}

clean:
			${RM} ${OBJS} ${BONUSOBJS}

fclean:		
			${RM} ${OBJS} ${BONUSOBJS}
			${RM} ${NAME}

re:			fclean all

.PHONY:		all clean fclean re
